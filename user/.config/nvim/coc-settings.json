  // "clangd.compilationDatabasePath": "path_to_comilecommands.json-folder",
  "signature.target": "float",
  "clangd.semanticHighlighting": true,
  "clangd.trace": "log.json",
  "clang-format-style-options.shortcut": "LS",
  // For windows have to set fallback flags
  // "clangd.fallbackFlags": ["--target=x86_64-w64-windows-gnu"],
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "cpp",
    "java",
    "lua",
    "c",
    "json",
    "markdown",
    "python"
  ],
  "git.enableGutters": true,
  "cSpell.userWords": [
    "cmake",
    "debugpy",
    "floaterm",
    "pyright",
    "rajpr",
    "rajprakhar",
    "ultisnips"
  ],
  "java.format.onType.enabled": true,
  // "python.linting.pep8Enabled": true,
  // "python.linting.flake8Enabled": true,
  "python.formatting.provider": "yapf",
  "yaml.hover": true,
  "yaml.schemas": {},
  "yaml.format.enable": true,
  "git.addGBlameToVirtualText": false
